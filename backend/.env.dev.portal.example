# Perfil local de desarrollo para pruebas del portal.
# Solo para entornos de prueba en maquina local.

DATABASE_URL=sqlite:///./sql_app.db
SECRET_KEY=replace-with-a-local-random-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
AUTH_MAX_FAILED_ATTEMPTS=10
AUTH_LOCKOUT_MINUTES=2

BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","testserver"]

ENV=development
DEBUG=false
DEFAULT_TENANT_ID=alcaldia-demo
AUTO_CREATE_TABLES=true
ENABLE_SEED_DATA=true
DEV_SEED_ADMIN_EMAIL=admin.dev@cunservicios-demo.com
DEV_SEED_ADMIN_PASSWORD=DevAdmin#Portal2026!
DEV_SEED_PORTAL_EMAIL=portal.dev@cunservicios-demo.com
DEV_SEED_PORTAL_PASSWORD=DevPortal#Recibo2026!

ENFORCE_AUTH_ON_DATA_ENDPOINTS=true
ENABLE_HTTPS_REDIRECT=false
ENABLE_SECURITY_HEADERS=true
SECURITY_HSTS_SECONDS=0
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_FRAME_OPTIONS=DENY
SECURITY_CONTENT_SECURITY_POLICY="default-src 'none'; frame-ancestors 'none'; base-uri 'none';"

DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
